<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Solana Rich List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            padding: 20px;
        }
        .stats-card {
            margin-bottom: 20px;
        }
        .timestamp {
            color: #666;
            font-size: 0.9em;
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="mb-4">Solana Rich List</h1>
        
        <p class="timestamp">Last updated: <%= timestamp %></p>

        <!-- Statistics Cards -->
        <div class="row stats-card">
            <% stats.forEach(function(stat) { %>
                <div class="col-md-3 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title"><%= stat %></h5>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>

        <!-- Rich List Table -->
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Rank</th>
                        <th>Address</th>
                        <th>Quantity (SOL)</th>
                        <th>Percentage</th>
                    </tr>
                </thead>
                <tbody>
                    <% richList.forEach(function(entry) { %>
                        <tr>
                            <td><%= entry.rank %></td>
                            <td><code><%= entry.address %></code></td>
                            <td><%= entry.quantity %></td>
                            <td><%= entry.percentage %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html> 